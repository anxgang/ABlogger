<!-- Blog Post -->
<!-- Title -->
<h1><%= @post.title %></h1>

<!-- Author -->
<p class="lead">
    by <a href="#"><%= @user.email %></a>
</p>

<hr>

<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span> Posted on <%= l(@post.created_at, :format => :long)  %></p>

<hr>

<!-- Preview Image -->
<!--<img class="img-responsive" src="http://placehold.it/900x300" alt="">

<hr>
-->
<!-- Post Content -->
<p class="lead"><%= @post.content %></p>

<hr>

<!-- Blog Comments -->

<!-- Comments Form -->
<div class="well">
    <h4>Leave a Comment:</h4>
    <%= simple_form_for([@post,@post.comments.new]) do |f| %>
      <div class="form-group">
        <%= f.input :body, class: 'form-control', row: 3, label: false , placeholder: 'Leave a comment here...'  %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "submiting..." } %>
    <% end %>
    </form>
</div>
<hr>

<!-- Posted Comments -->
<%= render @comments %>
